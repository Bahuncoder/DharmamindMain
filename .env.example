PORT=3000
NODE_ENV=production

# Email Service Configuration (Choose one)

# Option 1: SendGrid (Recommended for transactional emails)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=dharmamindai@outlook.com
FROM_NAME=DharmaMind Team

# Option 2: Mailchimp (Best for newsletters)
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_LIST_ID=your_mailchimp_list_id_here
MAILCHIMP_SERVER_PREFIX=us1

# Option 3: Brevo/Sendinblue (Good free tier)
BREVO_API_KEY=your_brevo_api_key_here

# Option 4: Resend (Modern, developer-friendly)
RESEND_API_KEY=your_resend_api_key_here

# Option 5: Microsoft Outlook/Office 365 (Company email)
OUTLOOK_EMAIL=dharmamindai@outlook.com
OUTLOOK_PASSWORD=your_app_password_here
# OR use OAuth (more secure)
OUTLOOK_CLIENT_ID=your_azure_app_client_id
OUTLOOK_CLIENT_SECRET=your_azure_app_secret
OUTLOOK_TENANT_ID=your_azure_tenant_id

# SMTP Settings for Outlook (Alternative method)
SMTP_HOST=smtp-mail.outlook.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=dharmamindai@outlook.com
SMTP_PASS=your_app_password_here

# Website Configuration
WEBSITE_URL=https://dharmamindai.com
ADMIN_EMAIL=dharmamindai@outlook.com

# Security
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
ADMIN_PASSWORD=change_this_secure_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=

# Database (If you want to upgrade from JSON)
# MONGODB_URI=mongodb://localhost:27017/dharmamind
